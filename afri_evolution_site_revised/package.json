{
  "name": "afri-evolution-site",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:css && vite build",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/assets/main.css --minify",
    "postbuild": "node scripts/postbuild.js",
    "gen:sitemap": "node scripts/gen-sitemap.js",
    "generate-favicons": "node scripts/generate-favicons.js",
    "optimize-images": "node scripts/optimize-images.js",
    "preview": "vite preview",
    "lint:hex": "git diff -U0 | grep -E '^[+].*#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})' && echo '‚ùå Raw hex detected. Use tokens.' && exit 1 || true",
    "dev:tunnel:cf": "vite",
    "dev:tunnel:ngrok": "vite",
    "preview:tunnel:cf": "vite preview",
    "preview:tunnel:ngrok": "vite preview"
  },
  "devDependencies": {
    "vite": "^7.1.9",
    "tailwindcss": "^4.1.14",
    "postcss": "^8.5.6",
    "autoprefixer": "^10.4.21",
    "sharp": "^0.32.0",
    "png-to-ico": "^1.0.0"
  }
}
